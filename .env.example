# GroupMe API Configuration
# Get your access token from https://dev.groupme.com
GROUPME_ACCESS_TOKEN=your_access_token_here
GROUPME_API_BASE_URL=https://api.groupme.com/v3
GROUPME_RATE_LIMIT_CALLS=100
GROUPME_RATE_LIMIT_PERIOD=60

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=groupme_backup
DB_USER=postgres
DB_PASSWORD=your_password_here

# Sync Settings
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=5

# Optional: Specific groups to backup (comma-separated group IDs)
# Leave empty to backup all groups
# BACKUP_GROUP_IDS=12345678,87654321
